<ul class="nav nav-pills">
  <!-- All Products -->
  <li class="nav-item">
    <!-- categoryId 為空字串""，注意""中間不能有空格 -->
    <a class="nav-link {{#ifCond "" categoryId}}active{{/ifCond}}" href="/products?categoryId=">All Products</a>
  </li>

  <!-- 迭代 categories -->
  {{#each categories}}
  <li class="nav-item">
    <!-- 注意：Route：
    1. href="?categoryId='"this.id"'id
    2. -> 導向 前台 Index：app.get "/products"..."
    3. -> productController.getRestaurants：
          Category.findAll"res.render：data(已篩選)、categories＆categoryId 皆已篩選和處理 " -->
    <!-- 代入 active 屬性：點擊 反藍底；參考 Bootstrap-Navs的Pills-->
    <a class="nav-link {{#ifCond this.id ../categoryId}}active{{/ifCond}}" href="/products?categoryId={{this.id}}">
      {{this.name}}
    </a>
  </li>
  {{/each}}

  <li class="nav-item">
    <!-- 「全部」按鈕的情況，categoryId 會是空字串""，注意""中間不能有空格 -->
    <a class="nav-link" href="#">About Us</a>
  </li>

</ul>


<div class=" row">
  {{#each products}}
  <div class="col-md-4">
    <div class="card mb-4 shadow-sm">
      <img class="card-img-top" src="{{this.image}}" alt="Card image cap" width="286px" height="180px">

      <div class="card-body">
        <!-- Name -->
        <p class="card-text">
          <a href="/products/{{this.id}}">
            {{this.name}}
          </a>
        </p>

        <!-- Category -->
        <span class="badge badge-secondary">{{this.categoryName}}</span>
        </br>
        <!-- Cart -->
        <span>
          <button type="button" class="btn btn-outline-secondary" href="">
            Add to Cart
          </button>
        </span>


        <!-- Description -->
        <p class="card-text">{{this.description}}</p>

      </div>
    </div>
  </div>
  {{/each}}
</div>

<br />
<br />